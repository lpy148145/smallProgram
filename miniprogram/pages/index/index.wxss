html {
    height: 100%;
}

body {
    font-family: "Lantinghei SC","Open Sans",Arial,"Hiragino Sans GB","Microsoft YaHei","微软雅黑","STHeiti","WenQuanYi Micro Hei",SimSun,sans-serif;
    height: 100%;
}

.canvas{
  width: 100%;
  height: 500px;
}

.image {
    width: 100%;
    position: relative;
    height: 480rpx;
    overflow: hidden;
}

.image image {
    position: absolute;
    min-height: 130%;
    min-width: 100%;
    left: -100%;
    right: -100%;
    top: -130%;
    margin: auto;
    bottom: -100%;
}

.day-num {
    font-size: 120px;
    font-weight: 400;
    font-family: Arial;
}

.day-num-up {
    position: absolute;
    bottom: -50px;
    left: 48rpx;
    color: white;
}

.contain {
    overflow-y: hidden;
}

.day-num-down {
    position: absolute;
    top: -88px;
    left: 48rpx;
    color: black;
}

.date {
    margin-right: 48rpx;
    color: black;
    font-size: 16px;
    position: absolute;
    top: 500rpx;
    font-weight: 200;
    z-index: 2;
    right: 0;
    font-family: "Lantinghei SC",PingHei,STHeitiSC-Light,Lucida Grande,Lucida Sans Unicode,Helvetica,"Open Sans",Arial,"Hiragino Sans GB","Microsoft YaHei","微软雅黑","STHeiti","WenQuanYi Micro Hei",SimSun,sans-serif;
}

.daily-list {
    height: 100%;
    overflow: hidden;
    width: 100%;
}

.daily-sentence {
    width: 100%;
    height: 100%;
    overflow-y: hidden;
}

.sentence {
    display: flex;
    box-sizing: border-box;
    flex-direction: column;
    justify-content: center;
    align-items: flex-end;
    overflow: scroll;
    padding-left: 48rpx;
    padding-right: 48rpx;
    padding-top: 98rpx;
    font-family: "Lantinghei SC",PingHei,STHeitiSC-Light,Lucida Grande,Lucida Sans Unicode,Helvetica,"Open Sans",Arial,"Hiragino Sans GB","Microsoft YaHei","微软雅黑","STHeiti","WenQuanYi Micro Hei",SimSun,sans-serif;
    color: #000;
    overflow: hidden;
    position: relative;
    width: 100%;
    font-size: 17px;
    font-weight: 200;
}

.sentence-bg {
    width: 100%;
    /* background: url(./images/placeholder.jpg-do-not-use-local-path-./pages/index/index.wxss&101&14) no-repeat center; */
    background-size: auto 100%;
}

.quotes {
    font-size: 148rpx;
    display: block;
    color: #9B9B9B;
    padding: 0;
    margin: 0;
    z-index: 200;
    height: 28rpx;
    line-height: 148rpx;
    margin-bottom: 48rpx;
}

.sentence-content {
    font: 17px/1.6 "Lantinghei SC","Open Sans",Arial,"Hiragino Sans GB","Microsoft YaHei","微软雅黑","STHeiti","WenQuanYi Micro Hei",SimSun,sans-serif;
    letter-spacing: 1rpx;
    width: 100%;
    position: relative;
    font-weight: 300;
}

.content {
    -webkit-overflow-scrolling: touch;
}

.content::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.sentence-info {
    margin-top: 20px;
    text-align: right;
}

.btn-all {
    line-height: 56rpx;
    height: 56rpx;
    width: 100%;
    position: fixed;
    padding: 4px 0 8px 0;
    bottom: 0;
    background-color: white;
    z-index: 9;
    text-align: right;
}

.btn {
    display: inline-block;
    width: 56rpx;
    height: 56rpx;
    margin-right: 32rpx;
}

.like-count {
    font-size: 25rpx;
    color: #5B5C59;
    line-height: 56rpx;
    display: inline-block;
    position: relative;
    top: -35%;
    left: -28rpx;
}


